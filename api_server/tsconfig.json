{
  "include": [
    "app/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "build"
  ],
  "compileOnSave": false,
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "outDir": "build",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,
    "moduleResolution": "node",
    "sourceMap": true,
    "typeRoots": [
      "types" 
    ]
  }
}
